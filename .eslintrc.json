{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": [
        "app/api/dm/**/*.{ts,tsx}",
        "components/dm/**/*.{ts,tsx}",
        "lib/dm/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2021
      },
      "rules": {
        "@typescript-eslint/no-explicit-any": "error"
      }
    }
  ]
}
